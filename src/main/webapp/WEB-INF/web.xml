<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--
    A welcome file is the file that is invoked automatically by the server.
    If you don't specify any file name, by default server looks for the welcome file in following order:
    welcome-file-list in web.xml
    index.html
    home.jsp
    If none of these files are found, server renders 404 error-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServletName</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServletName</servlet-name>
        <url-pattern>/LoginServletName</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServletName</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServletName</servlet-name>
        <url-pattern>/RegisterServletName</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetStudentServletName</servlet-name>
        <servlet-class>GetStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetStudentServletName</servlet-name>
        <url-pattern>/GetStudentServletName</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchStudentServletName</servlet-name>
        <servlet-class>SearchStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchStudentServletName</servlet-name>
        <url-pattern>/SearchStudentServletName</url-pattern>
    </servlet-mapping>

</web-app>